<?xml version="1.0" encoding="UTF-8"?>
<job
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="urn:proactive:jobdescriptor:3.3"
        xsi:schemaLocation="urn:proactive:jobdescriptor:3.3 http://www.activeeon.com/public_content/schemas/proactive/jobdescriptor/3.3/schedulerjob.xsd"
        name="Untitled workflow 1"
        priority="normal"
        cancelJobOnError="false">
    <description>
        <![CDATA[ A workflow that executes a Docker compose script. ]]>
    </description>
    <taskFlow>
        <task name="Docker_Task"
              walltime="01:00">
            <description>
                <![CDATA[ Simple task running multi-container applications with Docker. ]]>
            </description>
            <scriptExecutable>
                <script>
                    <code language="docker-compose">
                        <![CDATA[
helloworld:
    image: busybox
    command: echo "Hello ProActive"
]]>
                    </code>
                </script>
            </scriptExecutable>
            <controlFlow block="none"></controlFlow>
        </task>
    </taskFlow>
</job>